<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160px"
    android:layout_height="300px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="21px">
    <com.ruffian.library.widget.RImageView
        android:id="@+id/image"
        android:layout_width="160px"
        android:layout_height="160px"

        app:border_color="@color/hui_color3"
        app:border_width="2px"
        app:corner_radius="6px"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="37px"
        android:layout_below="@id/image"
        android:layout_marginTop="10px"
        android:layout_centerHorizontal="true"
        android:text="￥290.00"
        android:textSize="28px"
        android:textColor="@color/hei_color1"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="26px"
        android:layout_below="@id/text1"
        android:layout_marginTop="6px"
        android:textColor="@color/hei_color1"
        android:textSize="20px"
        android:text="李维斯男士太阳镜"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/goumai"
        android:layout_width="130px"
        android:layout_height="54px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ju"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="购买"
            android:textSize="26px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>