<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="120px">

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_margin="10px"
        android:id="@+id/image"
        android:background="@drawable/noimage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130px"
        android:text="99*999"
        android:textSize="28px"
        android:textColor="@color/lan_color2"
        android:layout_centerVertical="true"
        android:id="@+id/name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:text="99*999"
        android:textSize="28px"
        android:textColor="@color/hei_color1"
        android:layout_centerVertical="true"
        android:id="@+id/code"
        android:layout_toRightOf="@id/name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:text="99"
        android:textSize="28px"
        android:textColor="@color/hong_color1"
        android:layout_centerVertical="true"
        android:id="@+id/pice"
        android:layout_toRightOf="@id/code"
        />
    <TextView
        android:layout_width="160px"
        android:layout_height="80px"
        android:layout_toRightOf="@id/pice"
        android:layout_marginLeft="40px"
        android:layout_centerVertical="true"
        android:background="@drawable/textview_neihuikuang"
        android:text="价格"
        android:textColor="@color/hei_color1"
        android:gravity="center"
        android:id="@+id/piceg"
        />
    <TextView
        android:layout_width="160px"
        android:layout_height="80px"
        android:layout_toRightOf="@id/piceg"
        android:layout_marginLeft="40px"
        android:layout_centerVertical="true"
        android:background="@drawable/textview_neihuikuang"
        android:text="名字"
        android:textColor="@color/hei_color1"
        android:gravity="center"
        android:id="@+id/nameg"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/hui_color3"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>