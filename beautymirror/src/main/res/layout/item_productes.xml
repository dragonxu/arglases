<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="224px"
    android:layout_height="320px"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ruffian.library.widget.RImageView
        android:id="@+id/image"
        android:layout_width="210px"
        android:layout_height="210px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textview_neibaikuang"
        app:border_color="@color/hui_color3"
        app:border_width="2px"
        app:corner_radius="6px"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_below="@id/image"
        android:layout_marginTop="10px"
        android:layout_centerHorizontal="true"
        android:text="￥290.00"
        android:textSize="38px"
        android:textColor="@color/hei_color1"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="37px"
        android:layout_below="@id/text1"
        android:layout_marginTop="6px"
        android:textColor="@color/hei_color1"
        android:textSize="28px"
        android:text="李维斯男士太阳镜"/>
</RelativeLayout>