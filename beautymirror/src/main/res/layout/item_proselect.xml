<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="200px">


    <ImageView
        android:id="@+id/image"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_marginLeft="10px"
        android:layout_centerVertical="true"
        android:background="@drawable/noimage"/>
    <TextView
        android:id="@+id/guidao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轨道号：11"
        android:textColor="@color/hei_color1"
        android:layout_marginLeft="210px"
        android:layout_marginTop="10px"
        android:textSize="32px"/>
    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32365"
        android:textColor="@color/hei_color1"
        android:layout_marginLeft="210px"
        android:layout_marginTop="80px"
        android:textSize="32px"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="眼镜"
        android:textColor="@color/hei_color1"
        android:layout_marginLeft="210px"
        android:layout_marginBottom="10px"
        android:layout_alignParentBottom="true"
        android:textSize="32px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_centerHorizontal="true"
        android:text="库存"
        android:textSize="36px"
        android:textColor="@color/hei_color1"
        />
    <TextView
        android:id="@+id/libs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/hei_color1"
        android:layout_marginTop="90px"
        android:textSize="36px"
        android:text="0"/>
    <TextView
        android:id="@+id/huanpro"
        android:layout_width="180px"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:text="换商品"
        android:gravity="center"
        android:textSize="32px"
        android:textColor="@color/hei_color1"
        android:background="@drawable/textview_neihuikuang"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"/>
    <TextView
        android:id="@+id/huaninv"
        android:layout_width="180px"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:text="换库存"
        android:gravity="center"
        android:textSize="32px"
        android:textColor="@color/hei_color1"
        android:background="@drawable/textview_neihuikuang"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="10px"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/hui_color3"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>